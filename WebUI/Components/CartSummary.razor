@using WebUI.Services
@using WebUI.Services.Interfaces
@using WebUI.Models.Cart
@inject CartService CartService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="cart-summary">
    <div class="cart-icon" @onclick="ToggleCartDropdown">
        <i class="fas fa-shopping-cart"></i>
        @if (TotalItems > 0)
        {
            <span class="cart-badge">@TotalItems</span>
        }
    </div>
    
    @if (ShowDropdown && TotalItems > 0)
    {
        <div class="cart-dropdown">
            <div class="cart-header">
                <h3>Shopping Cart (@TotalItems items) @(AuthService.IsAuthenticated ? "üîê" : "üë§")</h3>
                <button class="close-btn" @onclick="CloseDropdown">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            @if (IsLoadingCart)
            {
                <div style="padding: 20px; text-align: center;">
                    <i class="fas fa-spinner fa-spin"></i> Loading cart...
                </div>
            }
            else
            {
            <div class="cart-items">
                @if (AuthService.IsAuthenticated && ApiCart?.Items != null)
                {
                    @* Render API cart items for authenticated users *@
                    @foreach (var item in ApiCart.Items)
                    {
                        <div class="cart-item">
                            <div class="item-image">
                                <img src="@item.ImageUrl" alt="@item.ProductName" />
                            </div>
                            <div class="item-details">
                                <div class="item-name">@item.ProductName</div>
                                <div class="item-options">
                                    @if (!string.IsNullOrEmpty(item.Size))
                                    {
                                        <span>Size: @item.Size</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Color))
                                    {
                                        <span>Color: @item.Color</span>
                                    }
                                </div>
                                <div class="item-price">
                                    <span class="quantity">@item.Quantity x</span>
                                    <span class="price">@FormatPrice(item.Price)</span>
                                </div>
                            </div>
                            <button class="remove-btn" @onclick="() => RemoveApiCartItem(item.CartItemID)" title="Remove item">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    }
                }
                else
                {
                    @* Render local cart items for guests *@
                    @foreach (var item in CartItems)
                    {
                        <div class="cart-item">
                            <div class="item-image">
                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" />
                            </div>
                            <div class="item-details">
                                <div class="item-name">@item.Product.Name</div>
                                <div class="item-options">
                                    @if (!string.IsNullOrEmpty(item.SelectedSize))
                                    {
                                        <span>Size: @item.SelectedSize</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.SelectedColor))
                                    {
                                        <span>Color: @item.SelectedColor</span>
                                    }
                                </div>
                                <div class="item-price">
                                    <span class="quantity">@item.Quantity x</span>
                                    <span class="price">@item.Product.PriceFormatted</span>
                                </div>
                            </div>
                            <button class="remove-btn" @onclick="() => RemoveItem(item)" title="Remove item">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    }
                }
            </div>
            
            <div class="cart-footer">
                <div class="cart-total">
                    <strong>Total: @FormatPrice(TotalPrice)</strong>
                </div>
                <div class="cart-actions">
                    <button class="btn btn-secondary" @onclick="ClearCart">Clear All</button>
                    <button class="btn btn-primary" @onclick="GoToCheckout">Checkout</button>
                </div>
            </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public bool ShowDropdown { get; set; } = false;
    
    private List<CartItem> CartItems = new();
    private CartSummaryResponse? ApiCart = null;
    private int TotalItems = 0;
    private decimal TotalPrice = 0;
    private bool IsLoadingCart = false;

    protected override async Task OnInitializedAsync()
    {
        CartService.OnCartChanged += UpdateCart;
        AuthService.AuthStateChanged += OnAuthStateChanged;
        await LoadCartAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            for (int i = 0; i < 5; i++)
            {
                await Task.Delay(100 * (i + 1));
                
                if (AuthService?.IsAuthenticated == true && ApiCart == null)
                {
                    await LoadCartAsync();
                    await InvokeAsync(StateHasChanged);
                    break;
                }
            }
        }
    }

    private async void OnAuthStateChanged(object? sender, bool isAuthenticated)
    {
        await LoadCartAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadCartAsync()
    {
        IsLoadingCart = true;
        try
        {
            if (AuthService?.IsAuthenticated == true)
            {
                ApiCart = await CartService.GetCartFromApiAsync();
                TotalItems = ApiCart?.TotalItems ?? 0;
                TotalPrice = ApiCart?.TotalAmount ?? 0;
            }
            else
            {
                CartItems = CartService.GetItems();
                TotalItems = CartService.GetTotalItems();
                TotalPrice = CartService.GetTotalPrice();
                ApiCart = null;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[CartSummary] Error loading cart: {ex.Message}");
            CartItems = CartService.GetItems();
            TotalItems = CartService.GetTotalItems();
            TotalPrice = CartService.GetTotalPrice();
            ApiCart = null;
        }
        finally
        {
            IsLoadingCart = false;
        }
    }

    private async void UpdateCart()
    {
        await LoadCartAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task ToggleCartDropdown()
    {
        ShowDropdown = !ShowDropdown;
        
        if (ShowDropdown && AuthService?.IsAuthenticated == true && (ApiCart == null || TotalItems == 0))
        {
            await LoadCartAsync();
            StateHasChanged();
        }
    }

    private void CloseDropdown()
    {
        ShowDropdown = false;
    }

    private async Task RemoveItem(CartItem item)
    {
        CartService.RemoveItem(item.Product.Id, item.SelectedSize, item.SelectedColor);
        await LoadCartAsync();
    }

    private async Task RemoveApiCartItem(int cartItemId)
    {
        await CartService.RemoveCartItemAsync(cartItemId);
        await LoadCartAsync();
    }

    private async Task ClearCart()
    {
        if (AuthService?.IsAuthenticated == true)
        {
            await CartService.ClearCartAsync();
        }
        else
        {
            CartService.ClearCart();
        }
        ShowDropdown = false;
        await LoadCartAsync();
    }

    private void GoToCheckout()
    {
        ShowDropdown = false;

        // L∆∞u c√°c s·∫£n ph·∫©m ƒë∆∞·ª£c ch·ªçn v√†o CartService
        if (AuthService.IsAuthenticated && ApiCart?.Items != null)
        {
            CartService.SelectedApiCartItemIds = ApiCart.Items.Select(i => i.CartItemID).ToHashSet();
        }
        else
        {
            CartService.SelectedLocalProductIds = CartItems.Select(i => i.Product.Id).ToHashSet();
        }

        // Chuy·ªÉn h∆∞·ªõng sang trang checkout
        NavigationManager.NavigateTo("/checkout");
    }

    private string FormatPrice(decimal price)
    {
        return price.ToString("N0") + "ƒë";
    }

    public void Dispose()
    {
        CartService.OnCartChanged -= UpdateCart;
        AuthService.AuthStateChanged -= OnAuthStateChanged;
    }
}

