@page "/checkout"
@using WebUI.Services
@using WebUI.Services.Interfaces
@using WebUI.Models
@inject NavigationManager Navigation
@inject CartService CartService
@inject IToastService ToastService
@inject VoucherService VoucherService
@inject HttpClient Http
@inject ConfigurationService ConfigService

<div class="checkout-page">
    <div class="checkout-container">
        <div class="checkout-steps">
            <div class="step-dot active">1</div>
            <span class="step-label active">Giỏ hàng</span>
            <div class="step-divider active"></div>
            <div class="step-dot active">2</div>
            <span class="step-label active">Thông tin giao hàng</span>
            <div class="step-divider"></div>
            <div class="step-dot">3</div>
            <span class="step-label">Thanh toán</span>
        </div>

        <div style="display: flex; flex-direction: column; gap: 24px; max-width: 800px; margin: 0 auto;">
            <!-- Shipping form + Selected items -->
            <div class="checkout-main">
                <div class="shipping-card">
                    <h3>Thông tin giao hàng</h3>
                    <div class="checkout-form-grid">
                        <div>
                            <label>Họ và tên <span style="color: red;">*</span></label>
                            <input class="bw-input" @bind="Shipping.FullName" placeholder="Nguyễn Văn A" />
                        </div>
                        <div>
                            <label>Email</label>
                            <input class="bw-input" @bind="Shipping.Email" placeholder="email@example.com" />
                        </div>
                        <div>
                            <label>Số điện thoại <span style="color: red;">*</span></label>
                            <input class="bw-input" @bind="Shipping.Phone" placeholder="0901234567" />
                        </div>
                        
                        <!-- GHN Address Selection -->
                        <div>
                            <label>Tỉnh/Thành phố <span style="color: red;">*</span></label>
                            <select class="bw-input" @onchange="OnProvinceChanged" disabled="@IsLoadingProvinces">
                                <option value="">-- Chọn Tỉnh/Thành phố --</option>
                                @if (Provinces != null)
                                {
                                    @foreach (var province in Provinces)
                                    {
                                        <option value="@province.ProvinceID">@province.ProvinceName</option>
                                    }
                                }
                            </select>
                            @if (IsLoadingProvinces)
                            {
                                <small style="color: #6b7280;">Đang tải danh sách...</small>
                            }
                        </div>

                        <div>
                            <label>Quận/Huyện <span style="color: red;">*</span></label>
                            <select class="bw-input" @onchange="OnDistrictChanged" disabled="@(SelectedProvinceId == 0 || IsLoadingDistricts)">
                                <option value="">-- Chọn Quận/Huyện --</option>
                                @if (Districts != null)
                                {
                                    @foreach (var district in Districts)
                                    {
                                        <option value="@district.DistrictID">@district.DistrictName</option>
                                    }
                                }
                            </select>
                            @if (IsLoadingDistricts)
                            {
                                <small style="color: #6b7280;">Đang tải danh sách...</small>
                            }
                        </div>

                        <div>
                            <label>Phường/Xã <span style="color: red;">*</span></label>
                            <select class="bw-input" @bind="SelectedWardCode" disabled="@(SelectedDistrictId == 0 || IsLoadingWards)">
                                <option value="">-- Chọn Phường/Xã --</option>
                                @if (Wards != null)
                                {
                                    @foreach (var ward in Wards)
                                    {
                                        <option value="@ward.WardCode">@ward.WardName</option>
                                    }
                                }
                            </select>
                            @if (IsLoadingWards)
                            {
                                <small style="color: #6b7280;">Đang tải danh sách...</small>
                            }
                        </div>

                        <div class="full">
                            <label>Địa chỉ cụ thể <span style="color: red;">*</span></label>
                            <input class="bw-input" @bind="Shipping.Address" placeholder="Số nhà, tên đường..." />
                        </div>
                        <div class="full">
                            <label>Ghi chú</label>
                            <textarea class="bw-textarea" rows="3" @bind="Shipping.Note" placeholder="Yêu cầu giao hàng, ghi chú bổ sung..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="shipping-card" style="margin-top: 24px;">
                    <h3>Mã giảm giá</h3>
                    <div style="display: flex; gap: 12px; margin-top: 16px;">
                        <input 
                            class="bw-input" 
                            style="flex: 1;" 
                            @bind="VoucherCode" 
                            placeholder="Nhập mã giảm giá" 
                            disabled="@(AppliedVoucher != null)" />
                        @if (AppliedVoucher == null)
                        {
                            <button 
                                style="padding: 12px 24px; background: #2563eb; color: white, transparent; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; white-space: nowrap;"
                                @onclick="ApplyVoucher" 
                                disabled="@(string.IsNullOrWhiteSpace(VoucherCode) || IsApplyingVoucher)">
                                @if (IsApplyingVoucher)
                                {
                                    <span>Đang kiểm tra...</span>
                                }
                                else
                                {
                                    <span>Áp dụng</span>
                                }
                            </button>
                        }
                        else
                        {
                            <button 
                                style="padding: 12px 24px; background: #ef4444; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; white-space: nowrap;"
                                @onclick="RemoveVoucher">
                                <i class="fas fa-times"></i> Xóa
                            </button>
                        }
                    </div>
                    @if (AppliedVoucher != null)
                    {
                        <div style="margin-top: 12px; padding: 12px; background: #dcfce7; border-radius: 8px; border: 1px solid #86efac;">
                            <div style="display: flex; align-items: center; gap: 8px; color: #166534; font-weight: 600;">
                                <i class="fas fa-check-circle"></i>
                                <span>@AppliedVoucher.Name</span>
                            </div>
                            <div style="color: #166534; font-size: 14px; margin-top: 4px;">
                                Giảm @AppliedVoucher.CalculatedDiscount.ToString("N0")đ
                            </div>
                        </div>
                    }
                </div>

                <div class="shipping-card" style="margin-top: 24px;">
                    <h3>Phương thức vận chuyển</h3>
                    <div class="payment-methods-section">
                        <div class="payment-option-radio @(SelectedShippingMethod == "standard" ? "selected" : "")" @onclick="SelectStandardShipping">
                            <input type="radio" name="shipping" value="standard" checked="@(SelectedShippingMethod == "standard")" />
                            <div class="payment-option-info">
                                <div class="payment-option-name">Ship thường</div>
                                <div class="payment-option-desc">Giao hàng trong 3-5 ngày làm việc</div>
                            </div>
                            <div class="payment-option-fee">@(Subtotal >= 500000 ? "Miễn phí" : "30.000đ")</div>
                        </div>
                        <div class="payment-option-radio @(SelectedShippingMethod == "express" ? "selected" : "")" @onclick="SelectExpressShipping">
                            <input type="radio" name="shipping" value="express" checked="@(SelectedShippingMethod == "express")" />
                            <div class="payment-option-info">
                                <div class="payment-option-name">Ship hỏa tốc</div>
                                <div class="payment-option-desc">Giao hàng trong 1-2 ngày làm việc</div>
                            </div>
                            <div class="payment-option-fee">@(Subtotal >= 500000 ? "20.000đ" : "50.000đ")</div>
                        </div>
                    </div>
                </div>

                <div class="order-items-card">
                    <h3>Sản phẩm đã chọn</h3>
                    <div class="order-items-list">
                        @if (SelectedApiItems?.Any() == true)
                        {
                            @foreach (var i in SelectedApiItems!)
                            {
                                <div class="order-item-row">
                                    <img src="@i.ImageUrl" class="order-item-thumb" />
                                    <div style="flex:1; min-width:0;">
                                        <p class="order-item-name">@i.ProductName</p>
                                        <div class="order-item-meta">Size: @i.Size • @i.Color × @i.Quantity</div>
                                    </div>
                                    <div style="font-weight:800;">@i.TotalPriceFormatted</div>
                                </div>
                            }
                        }
                        else if (SelectedLocalItems?.Any() == true)
                        {
                            @foreach (var i in SelectedLocalItems!)
                            {
                                <div class="order-item-row">
                                    <img src="@i.Product.ImageUrl" class="order-item-thumb" />
                                    <div style="flex:1; min-width:0;">
                                        <p class="order-item-name">@i.Product.Name</p>
                                        <div class="order-item-meta">@((!string.IsNullOrEmpty(i.SelectedSize)?$"Size: {i.SelectedSize} • ":""))@((!string.IsNullOrEmpty(i.SelectedColor)?$"{i.SelectedColor} • ":""))× @i.Quantity</div>
                                    </div>
                                    <div style="font-weight:800;">@((i.Product.Price * i.Quantity).ToString("N0"))đ</div>
                                </div>
                            }
                        }
                        else
                        {
                            <div>Không có sản phẩm được chọn.</div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="summary-card" style="max-width: 100%;">
                <h3 class="summary-header">Tóm tắt đơn hàng</h3>
                <div class="summary-divider"></div>
                <div class="summary-row">
                    <span class="summary-label">Tạm tính</span>
                    <span class="summary-value">@SubtotalFormatted</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Phí vận chuyển</span>
                    <span class="summary-value">@ShippingFeeFormatted</span>
                </div>
                @if (AppliedVoucher != null)
                {
                    <div class="summary-row" style="color: #16a34a;">
                        <span class="summary-label">
                            <i class="fas fa-tag"></i> Giảm giá
                        </span>
                        <span class="summary-value">-@AppliedVoucher.CalculatedDiscount.ToString("N0")đ</span>
                    </div>
                }
                <div class="summary-divider"></div>
                <div class="summary-row total">
                    <span class="summary-label">Tổng cộng</span>
                    <span class="summary-value">@TotalFormatted</span>
                </div>
                <button class="btn-pay-now" @onclick="GoToPayment" disabled="@(!HasAnySelection)">
                    <i class="fas fa-credit-card"></i>
                    Thanh toán ngay
                </button>
                <button class="btn-continue" style='width:100%; margin-top:12px;' @onclick='() => Navigation.NavigateTo("/cart")'>
                    <i class="fas fa-arrow-left"></i>
                    Quay lại giỏ hàng
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    // GHN Address DTOs
    public class GhnProvince
    {
        public int ProvinceID { get; set; }
        public string? ProvinceName { get; set; }
    }

    public class GhnDistrict
    {
        public int DistrictID { get; set; }
        public string? DistrictName { get; set; }
    }

    public class GhnWard
    {
        public string? WardCode { get; set; }
        public string? WardName { get; set; }
    }

    public class GhnProvinceResponse
    {
        public List<GhnProvince>? Data { get; set; }
    }

    public class GhnDistrictResponse
    {
        public List<GhnDistrict>? Data { get; set; }
    }

    public class GhnWardResponse
    {
        public List<GhnWard>? Data { get; set; }
    }

    private class ShippingInfo
    {
        public string FullName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string City { get; set; } = "";
        public string Address { get; set; } = "";
        public string Note { get; set; } = "";
    }

    private ShippingInfo Shipping = new();
    private string SelectedShippingMethod = "standard";

    // GHN Address fields
    private List<GhnProvince>? Provinces;
    private List<GhnDistrict>? Districts;
    private List<GhnWard>? Wards;
    private int SelectedProvinceId = 0;
    private int SelectedDistrictId = 0;
    private string SelectedWardCode = "";
    private string SelectedProvinceName = "";
    private string SelectedDistrictName = "";
    private string SelectedWardName = "";
    private bool IsLoadingProvinces = false;
    private bool IsLoadingDistricts = false;
    private bool IsLoadingWards = false;

    private List<WebUI.Models.Cart.CartItemResponse>? SelectedApiItems;
    private List<WebUI.Services.CartItem>? SelectedLocalItems;

    // Voucher fields
    private string VoucherCode = "";
    private ValidateVoucherResponse? AppliedVoucher = null;
    private bool IsApplyingVoucher = false;

    private bool HasAnySelection => (SelectedApiItems?.Any() == true) || (SelectedLocalItems?.Any() == true);

    private decimal Subtotal =>
        (SelectedApiItems?.Sum(x => x.TotalPrice) ?? 0) +
        (SelectedLocalItems?.Sum(x => x.Product.Price * x.Quantity) ?? 0);

    private decimal ShippingFee
    {
        get
        {
            if (Subtotal >= 500000)
            {
                return SelectedShippingMethod == "express" ? 20000 : 0;
            }
            else
            {
                return SelectedShippingMethod == "express" ? 50000 : 30000;
            }
        }
    }

    private decimal Discount => AppliedVoucher?.CalculatedDiscount ?? 0;
    private decimal Total => Math.Max(0, Subtotal + ShippingFee - Discount);
    private string SubtotalFormatted => $"{Subtotal:N0}đ";
    private string ShippingFeeFormatted => ShippingFee == 0 ? "Miễn phí" : $"{ShippingFee:N0}đ";
    private string TotalFormatted => $"{Total:N0}đ";

    protected override async Task OnInitializedAsync()
    {
        await LoadSelectedItems();
        
        if (!HasAnySelection)
        {
            Navigation.NavigateTo("/cart");
            return;
        }

        // Load provinces from GHN
        await LoadProvinces();
    }

    private async Task LoadProvinces()
    {
        IsLoadingProvinces = true;
        StateHasChanged();

        try
        {
            var apiBaseUrl = await ConfigService.GetApiBaseUrlAsync();
            var response = await Http.GetFromJsonAsync<GhnProvinceResponse>($"{apiBaseUrl}/api/shipping/provinces");
            Provinces = response?.Data;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Không thể tải danh sách tỉnh/thành: {ex.Message}");
            Console.WriteLine($"[LoadProvinces] Error: {ex}");
        }
        finally
        {
            IsLoadingProvinces = false;
            StateHasChanged();
        }
    }

    private async Task OnProvinceChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var provinceId))
        {
            SelectedProvinceId = provinceId;
            SelectedProvinceName = Provinces?.FirstOrDefault(p => p.ProvinceID == provinceId)?.ProvinceName ?? "";
            
            // Reset district and ward
            SelectedDistrictId = 0;
            SelectedWardCode = "";
            Districts = null;
            Wards = null;

            // Load districts
            await LoadDistricts(provinceId);
        }
        else
        {
            SelectedProvinceId = 0;
            SelectedProvinceName = "";
            Districts = null;
            Wards = null;
        }
        
        StateHasChanged();
    }

    private async Task LoadDistricts(int provinceId)
    {
        IsLoadingDistricts = true;
        StateHasChanged();

        try
        {
            var apiBaseUrl = await ConfigService.GetApiBaseUrlAsync();
            var response = await Http.GetFromJsonAsync<GhnDistrictResponse>($"{apiBaseUrl}/api/shipping/districts/{provinceId}");
            Districts = response?.Data;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Không thể tải danh sách quận/huyện: {ex.Message}");
            Console.WriteLine($"[LoadDistricts] Error: {ex}");
        }
        finally
        {
            IsLoadingDistricts = false;
            StateHasChanged();
        }
    }

    private async Task OnDistrictChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var districtId))
        {
            SelectedDistrictId = districtId;
            SelectedDistrictName = Districts?.FirstOrDefault(d => d.DistrictID == districtId)?.DistrictName ?? "";
            
            // ⚠️ IMPORTANT: Reset ward khi đổi district
            SelectedWardCode = "";
            SelectedWardName = "";
            Wards = null;

            Console.WriteLine($"[Checkout] District changed to: {districtId} ({SelectedDistrictName})");

            // Load wards
            await LoadWards(districtId);
        }
        else
        {
            SelectedDistrictId = 0;
            SelectedDistrictName = "";
            SelectedWardCode = "";
            SelectedWardName = "";
            Wards = null;
        }
        
        StateHasChanged();
    }

    private async Task LoadWards(int districtId)
    {
        IsLoadingWards = true;
        StateHasChanged();

        try
        {
            var apiBaseUrl = await ConfigService.GetApiBaseUrlAsync();
            var response = await Http.GetFromJsonAsync<GhnWardResponse>($"{apiBaseUrl}/api/shipping/wards/{districtId}");
            Wards = response?.Data;
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Không thể tải danh sách phường/xã: {ex.Message}");
            Console.WriteLine($"[LoadWards] Error: {ex}");
        }
        finally
        {
            IsLoadingWards = false;
            StateHasChanged();
        }
    }

    private async Task LoadSelectedItems()
    {
        try
        {
            var apiCart = await CartService.GetCartFromApiAsync();
            
            if (apiCart != null && apiCart.Items.Any())
            {
                if (CartService.SelectedApiCartItemIds.Any())
                {
                    SelectedApiItems = apiCart.Items
                        .Where(i => CartService.SelectedApiCartItemIds.Contains(i.CartItemID))
                        .ToList();
                }
                else
                {
                    SelectedApiItems = apiCart.Items.ToList();
                }
            }
            else
            {
                var localAll = CartService.GetItems();
                
                if (CartService.SelectedLocalProductIds.Any())
                {
                    SelectedLocalItems = localAll
                        .Where(i => CartService.SelectedLocalProductIds.Contains(i.Product.Id))
                        .ToList();
                }
                else
                {
                    SelectedLocalItems = localAll.ToList();
                }
            }
        }
        catch
        {
            // Silent error handling
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            StateHasChanged();
        }
    }

    private void SelectStandardShipping()
    {
        SelectedShippingMethod = "standard";
        StateHasChanged();
    }

    private void SelectExpressShipping()
    {
        SelectedShippingMethod = "express";
        StateHasChanged();
    }

    private async Task ApplyVoucher()
    {
        if (string.IsNullOrWhiteSpace(VoucherCode))
        {
            ToastService.ShowWarning("Vui lòng nhập mã giảm giá");
            return;
        }

        IsApplyingVoucher = true;
        StateHasChanged();

        try
        {
            var orderAmountBeforeDiscount = Subtotal + ShippingFee;
            var result = await VoucherService.ValidateVoucherAsync(VoucherCode, orderAmountBeforeDiscount);

            if (result != null && result.IsValid)
            {
                AppliedVoucher = result;
                ToastService.ShowSuccess(result.Message);
            }
            else
            {
                ToastService.ShowWarning(result?.Message ?? "Mã giảm giá không hợp lệ");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Lỗi khi áp dụng mã giảm giá: {ex.Message}");
        }
        finally
        {
            IsApplyingVoucher = false;
            StateHasChanged();
        }
    }

    private void RemoveVoucher()
    {
        AppliedVoucher = null;
        VoucherCode = "";
        ToastService.ShowInfo("Đã xóa mã giảm giá");
        StateHasChanged();
    }

    private void GoToPayment()
    {
        if (!HasAnySelection)
        {
            ToastService.ShowWarning("Vui lòng chọn sản phẩm để thanh toán");
            return;
        }

        // Validate shipping info
        if (string.IsNullOrWhiteSpace(Shipping.FullName) || 
            string.IsNullOrWhiteSpace(Shipping.Phone) || 
            string.IsNullOrWhiteSpace(Shipping.Address))
        {
            ToastService.ShowWarning("Vui lòng điền đầy đủ thông tin giao hàng");
            return;
        }

        // Validate GHN address
        if (SelectedProvinceId == 0 || SelectedDistrictId == 0 || string.IsNullOrWhiteSpace(SelectedWardCode))
        {
            ToastService.ShowWarning("Vui lòng chọn đầy đủ Tỉnh/Thành phố, Quận/Huyện, Phường/Xã");
            return;
        }

        // ⚠️ IMPORTANT: Validate Ward thuộc District đã chọn
        if (Wards == null || !Wards.Any(w => w.WardCode == SelectedWardCode))
        {
            ToastService.ShowError($"❌ Lỗi: Phường/Xã '{SelectedWardCode}' không thuộc Quận/Huyện đã chọn! Vui lòng chọn lại.");
            Console.WriteLine($"[Checkout] VALIDATION ERROR: WardCode {SelectedWardCode} not in District {SelectedDistrictId}");
            Console.WriteLine($"[Checkout] Available Wards: {string.Join(", ", Wards?.Select(w => w.WardCode) ?? new List<string>())}");
            return;
        }

        // Get selected ward name
        SelectedWardName = Wards?.FirstOrDefault(w => w.WardCode == SelectedWardCode)?.WardName ?? "";

        // Build full address
        var fullAddress = $"{Shipping.Address}, {SelectedWardName}, {SelectedDistrictName}, {SelectedProvinceName}";

        Console.WriteLine($"[Checkout] Saving address:");
        Console.WriteLine($"  - ProvinceId: {SelectedProvinceId} ({SelectedProvinceName})");
        Console.WriteLine($"  - DistrictId: {SelectedDistrictId} ({SelectedDistrictName})");
        Console.WriteLine($"  - WardCode: {SelectedWardCode} ({SelectedWardName})");
        Console.WriteLine($"  - DetailAddress: {Shipping.Address}");
        Console.WriteLine($"  - FullAddress: {fullAddress}");

        // Save checkout info
        CartService.CheckoutInfo = new CheckoutInfo
        {
            FullName = Shipping.FullName,
            Email = Shipping.Email,
            Phone = Shipping.Phone,
            City = SelectedProvinceName,
            Address = fullAddress, // Full GHN address
            Note = Shipping.Note,
            ShippingMethod = SelectedShippingMethod,
            ShippingFee = ShippingFee,
            Subtotal = Subtotal,
            Total = Total,
            SelectedApiItems = SelectedApiItems,
            SelectedLocalItems = SelectedLocalItems,
            VoucherID = AppliedVoucher?.VoucherID,
            VoucherCode = AppliedVoucher?.VoucherCode,
            Discount = Discount,
            // GHN fields
            GhnProvinceId = SelectedProvinceId,
            GhnDistrictId = SelectedDistrictId,
            GhnWardCode = SelectedWardCode,
            GhnFullAddress = fullAddress
        };

        Navigation.NavigateTo("/payment");
    }
}


