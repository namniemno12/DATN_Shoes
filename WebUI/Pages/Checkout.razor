@code {
    // GHN Address DTOs
    public class GhnProvince
    {
        public int ProvinceID { get; set; }
        public string? ProvinceName { get; set; }
    }

    public class GhnDistrict
    {
        public int DistrictID { get; set; }
        public string? DistrictName { get; set; }
    }

    public class GhnWard
    {
        public string? WardCode { get; set; }
        public string? WardName { get; set; }
    }

    public class GhnProvinceResponse
    {
        public List<GhnProvince>? Data { get; set; }
    }

    public class GhnDistrictResponse
    {
        public List<GhnDistrict>? Data { get; set; }
    }

    public class GhnWardResponse
    {
        public List<GhnWard>? Data { get; set; }
    }

    private class ShippingInfo
    {
        public string FullName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string City { get; set; } = "";
        public string Address { get; set; } = "";
        public string Note { get; set; } = "";
    }

    private ShippingInfo Shipping = new();
    private string SelectedShippingMethod = "standard";

    // GHN Address fields
    private List<GhnProvince>? Provinces;
    private List<GhnDistrict>? Districts;
    private List<GhnWard>? Wards;
    private int SelectedProvinceId = 0;
    private int SelectedDistrictId = 0;
    private string SelectedWardCode = "";
    private string SelectedProvinceName = "";
    private string SelectedDistrictName = "";
    private string SelectedWardName = "";
    private bool IsLoadingProvinces = false;
    private bool IsLoadingDistricts = false;
    private bool IsLoadingWards = false;

    // Address Management
    private bool IsUserLoggedIn = false;
    private List<AddressDto>? UserAddresses = null;
    private int SelectedSavedAddressId = 0;
    private bool UseManualAddress = false;
    private bool ShowAddressManager = false;

    private List<WebUI.Models.Cart.CartItemResponse>? SelectedApiItems;
    private List<WebUI.Services.CartItem>? SelectedLocalItems;

    // Voucher fields
    private string VoucherCode = "";
    private ValidateVoucherResponse? AppliedVoucher = null;
    private bool IsApplyingVoucher = false;

    private bool HasAnySelection => (SelectedApiItems?.Any() == true) || (SelectedLocalItems?.Any() == true);

    private decimal CalculatedStandardShippingFee = 0m;
    private decimal CalculatedExpressShippingFee = 0m;
    private bool IsCalculatingShippingFee = false;
    private bool ShippingFeeCalculationError = false;
    
    private decimal Subtotal =>
        (SelectedApiItems?.Sum(x => x.TotalPrice) ?? 0) +
        (SelectedLocalItems?.Sum(x => x.Product.Price * x.Quantity) ?? 0);

    private decimal ShippingFee
    {
        get
        {
            if (SelectedShippingMethod == "express")
            {
                return CalculatedExpressShippingFee > 0 ? CalculatedExpressShippingFee : 25000m; // Fallback
            }
            else
            {
                return CalculatedStandardShippingFee > 0 ? CalculatedStandardShippingFee : 15000m; // Fallback
            }
        }
    }

    private decimal Discount => AppliedVoucher?.CalculatedDiscount ?? 0;
    private decimal Total => Math.Max(0, Subtotal + ShippingFee - Discount);
    private string SubtotalFormatted => $"{Subtotal:N0}ƒë";
    private string ShippingFeeFormatted => $"{ShippingFee:N0}ƒë";
    private string TotalFormatted => $"{Total:N0}ƒë";
    
    private string GetShippingFeeDisplay(string method)
    {
        if (IsCalculatingShippingFee)
        {
            return "‚è≥ ƒêang t√≠nh...";
        }
        
        var fee = method == "express" ? CalculatedExpressShippingFee : CalculatedStandardShippingFee;
        
        if (fee > 0)
        {
            return $"{fee:N0}ƒë";
        }
        
        // Show message if address not selected
        if (string.IsNullOrEmpty(SelectedWardCode) || SelectedDistrictId == 0)
        {
            return "Ch·ªçn ƒë·ªãa ch·ªâ";
        }
        
        // Show estimated range if not calculated yet
        return method == "express" ? "~25-50k" : "~15-30k";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadSelectedItems();
        
        if (!HasAnySelection)
        {
            Navigation.NavigateTo("/cart");
            return;
        }

        // Check if user is logged in and load addresses
        IsUserLoggedIn = AuthService.IsAuthenticated;

        if (IsUserLoggedIn)
        {
            await LoadUserAddresses();
        }

        // Load provinces from GHN
        await LoadProvinces();
    }

    private async Task LoadUserAddresses()
    {
        try
        {
            UserAddresses = await AddressService.GetUserAddressesAsync();
            
            // If user has a default address, auto-select it
            if (UserAddresses != null && UserAddresses.Any())
            {
                var defaultAddr = UserAddresses.FirstOrDefault(a => a.IsDefault);
                if (defaultAddr != null)
                {
                    await ApplySavedAddress(defaultAddr);
                }
            }
            else
            {
                // No saved addresses, use manual input
                UseManualAddress = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user addresses: {ex.Message}");
            UseManualAddress = true;
        }
    }

    private void OpenAddressManager()
    {
        ShowAddressManager = true;
    }

    private async Task CloseAddressManager()
    {
        ShowAddressManager = false;
        // Reload addresses after closing manager
        await LoadUserAddresses();
    }

    private async Task OnAddressSelectedFromManager(AddressDto address)
    {
