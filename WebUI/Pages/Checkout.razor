    private async Task CalculateShippingFees()
    {
        // Only calculate if we have district and ward selected
        if (SelectedDistrictId == 0 || string.IsNullOrEmpty(SelectedWardCode))
        {
            CalculatedStandardShippingFee = 0m;
            CalculatedExpressShippingFee = 0m;
            ShippingFeeCalculationError = false;
            return;
        }

        IsCalculatingShippingFee = true;
        ShippingFeeCalculationError = false;
        StateHasChanged();

        try
        {
            // Calculate total weight and quantity
            int totalQuantity = (SelectedApiItems?.Sum(x => x.Quantity) ?? 0) + 
                               (SelectedLocalItems?.Sum(x => x.Quantity) ?? 0);
            
            // Use ShippingService helper methods
            int totalWeight = WebUI.Services.ShippingService.EstimatePackageWeight(totalQuantity);
            var (length, width, height) = WebUI.Services.ShippingService.EstimatePackageDimensions(totalQuantity);
            
            Console.WriteLine($"[Checkout] Calculating fees for: Quantity={totalQuantity}, Weight={totalWeight}g, Dimensions={length}x{width}x{height}cm");
            Console.WriteLine($"[Checkout] Destination: DistrictId={SelectedDistrictId}, WardCode={SelectedWardCode}");
            
            // Use ShippingService to calculate both fees
            var result = await ShippingService.CalculateBothShippingFeesAsync(
                SelectedDistrictId,
                SelectedWardCode,
                totalWeight,
                length,
                width,
                height,
                Subtotal
            );
            
            CalculatedStandardShippingFee = result.StandardFee;
            CalculatedExpressShippingFee = result.ExpressFee;
            ShippingFeeCalculationError = !result.Success;
            
            Console.WriteLine($"[Checkout] ‚úÖ Shipping fees calculated:");
            Console.WriteLine($"  - Standard: {CalculatedStandardShippingFee:N0}ƒë");
            Console.WriteLine($"  - Express: {CalculatedExpressShippingFee:N0}ƒë");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Checkout] ‚ùå Error calculating shipping fees: {ex.Message}");
            // Use fallback values
            CalculatedStandardShippingFee = 15000m;
            CalculatedExpressShippingFee = 25000m;
            ShippingFeeCalculationError = true;
        }
        finally
        {
            IsCalculatingShippingFee = false;
            StateHasChanged();
        }
    }
    
