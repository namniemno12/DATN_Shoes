@code {
    private List<Product> TrendingProducts { get; set; } = new();
    private List<Product> FeaturedProducts { get; set; } = new();
    private List<Product> NewProducts { get; set; } = new();
    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();

            TrendingProducts = await ProductService.GetAllProductsAsync(
                ProductLandingFilterType.WeeklyTrend, 
                null, 
                1, 
                20
            );
            
            NewProducts = await ProductService.GetAllProductsAsync(
                ProductLandingFilterType.NewProducts, 
                null, 
                1, 
                20
            );
            
            // B·ªô S∆∞u T·∫≠p N·ªïi B·∫≠t - FeaturedCollections (discount >= 20%)
            FeaturedProducts = await ProductService.GetAllProductsAsync(
                ProductLandingFilterType.FeaturedCollections, 
                null, 
                1, 
                20
            );
        }
        catch
        {
            TrendingProducts = new List<Product>();
            FeaturedProducts = new List<Product>();
            NewProducts = new List<Product>();
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private void OnProductClick(Product product)
    {
        Navigation.NavigateTo($"/product/{product.Id}");
    }

    private void OnQuickView(Product product)
    {
        // Handle quick view
    }

    private void OnCategorySelected(CategoriesBar.CategoryModel category)
    {
        Navigation.NavigateTo($"/shop?category={Uri.EscapeDataString(category.Name)}");
    }
