<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" Context="authContext">
                <Authorizing>
                    <div class="loading-container">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Đang xác thực...</span>
                        </div>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    @if (authContext.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <div class="unauthorized-container">
                            <h3>Không có quyền truy cập</h3>
                            <p>Bạn không có quyền truy cập trang này.</p>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Không tìm thấy trang</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="not-found-container">
                    <h3>404 - Không tìm thấy trang</h3>
                    <p>Xin lỗi, trang bạn tìm kiếm không tồn tại.</p>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
