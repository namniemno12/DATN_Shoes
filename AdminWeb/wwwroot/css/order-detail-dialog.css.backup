.btn-ghn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(238, 77, 45, 0.35);
}

.btn-ghn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-ghn svg {
    width: 18px;
    height: 18px;
}

/* GHN Info Grid - Enhanced */
.ghn-info-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.ghn-info-highlight {
    background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
    border: 2px solid #fee5e5;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.ghn-info-icon {
    width: 56px;
