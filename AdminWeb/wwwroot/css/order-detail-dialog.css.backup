    background: linear-gradient(135deg, #ee4d2d 0%, #ff6b4a 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(238, 77, 45, 0.2);
}

.ghn-info-icon svg {
    width: 28px;
    height: 28px;
    color: white;
}

.ghn-info-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    position: relative;
}

.ghn-info-label {
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.ghn-info-value {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1f2937;
}

.ghn-order-code {
    font-family: 'Courier New', monospace;
    color: #ee4d2d;
    font-size: 1.25rem;
    letter-spacing: 1px;
}

.btn-copy {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-copy:hover {
    background: #f9fafb;
    border-color: #ee4d2d;
}

.btn-copy svg {
    width: 16px;
    height: 16px;
    color: #6b7280;
}

.btn-copy:hover svg {
    color: #ee4d2d;
}

/* GHN Details Section */
.ghn-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.ghn-details .info-row {
    padding: 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.2s ease;
}

.ghn-details .info-row:hover {
    border-color: #fee;
    box-shadow: 0 2px 8px rgba(238, 77, 45, 0.08);
}

.ghn-details .info-row.full-width {
    grid-column: 1 / -1;
}

.ghn-details .info-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.ghn-details .info-label svg {
    width: 16px;
    height: 16px;
    color: #ee4d2d;
}

.ghn-details .info-value {
    font-size: 0.95rem;
    color: #1f2937;
    font-weight: 600;
}

.ghn-fee {
    color: #10b981 !important;
    font-size: 1.05rem !important;
}

/* GHN Timestamps */
.ghn-timestamps {
    grid-column: 1 / -1;
    display: flex;
    gap: 1rem;
    padding: 1.25rem !important;
    background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%) !important;
}

.timestamp-item {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.timestamp-item svg {
    width: 20px;
    height: 20px;
    color: #ee4d2d;
    flex-shrink: 0;
}

.timestamp-item > div {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.timestamp-label {
    font-size: 0.8rem;
    color: #6b7280;
    font-weight: 500;
}

.timestamp-value {
    font-size: 0.9rem;
    color: #1f2937;
    font-weight: 600;
}

/* Status Badges Enhanced */
.badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.badge svg {
    width: 14px;
    height: 14px;
}

.badge-success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
}

.badge-warning {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
}

.badge-info {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
}

.badge-danger {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
}

.ghn-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 2px dashed #fee;
    flex-wrap: wrap;
}

.ghn-actions .btn {
    flex: 1;
    min-width: 180px;
    justify-content: center;
}

.btn-secondary {
    background: white;
    color: #374151;
    padding: 0.75rem 1.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.btn-secondary:hover:not(:disabled) {
    background: #f9fafb;
    border-color: #d1d5db;
    transform: translateY(-1px);
}

.btn-secondary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-secondary svg {
    width: 16px;
    height: 16px;
}

.btn-link {
    background: transparent;
    color: #ee4d2d;
    padding: 0.75rem 1.5rem;
    border: 2px solid #ee4d2d;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
    text-decoration: none;
}

.btn-link:hover {
    background: #ee4d2d;
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(238, 77, 45, 0.25);
}

.btn-link svg {
    width: 16px;
    height: 16px;
}

.spinner-small {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.badge-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
}

@media (max-width: 768px) {
    .ghn-details {
        grid-template-columns: 1fr;
    }
    
    .ghn-info-highlight {
        flex-direction: column;
        text-align: center;
    }
    
    .btn-copy {
        position: static;
        transform: none;
        margin-top: 0.5rem;
    }
    
    .ghn-timestamps {
        flex-direction: column;
    }

    .ghn-actions {
        flex-direction: column;
    }

    .ghn-actions .btn {
        width: 100%;
        min-width: auto;
    }
}
