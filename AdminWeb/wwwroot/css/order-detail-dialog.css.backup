    padding: 3rem 2rem;
}

.ghn-empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.ghn-empty-icon svg {
    width: 40px;
    height: 40px;
    color: #ee4d2d;
}

.ghn-empty-text {
    color: #374151;
    margin-bottom: 0.5rem;
    font-size: 1.05rem;
